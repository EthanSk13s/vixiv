<div class="container">
    <main>
        <section class="flex-container column">
            <div>
                <h2>Login</h2>
            </div>
            <form>
                <fieldset class="main-field">
                    <div class="column-md">
                        <div class="column-md">
                            <label class="input-label" for="user">Username</label>
                            <input type="text" class="input-text" name="user" placeholder="Username" required>
                        </div>
                        <div class="column-md">
                            <label class="input-label" for="password">Password</label>
                            <input type="password" class="input-text" placeholder="Passowrd" required>
                        </div>
                    </div>
                    <div class="column-md">
                        <section>
                            Forgot your password? Too bad. (for now :))
                        </section>
                    </div>
                    <input type="submit" class="post-button" value="Login">
                </fieldset>
            </form>
        </section>
    </main>
</div>